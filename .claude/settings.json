{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(gh issue close*)",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'REMINDER: If closing an EPIC, verify docs/FEATURES.md has been updated with new functionality.'"
          }
        ]
      },
      {
        "matcher": "Bash(gh issue create*)",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'REMINDER: Include in Definition of Done: - [ ] docs/FEATURES.md updated (if adding user-facing functionality)'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash(gh pr merge*)",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/post-merge-cleanup.sh"
          }
        ]
      },
      {
        "matcher": "Bash(gh pr create*)",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/pr-features-check.sh"
          }
        ]
      }
    ]
  }
}
