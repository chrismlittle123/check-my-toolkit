{
  "name": "check-my-toolkit",
  "version": "1.5.0",
  "description": "Unified project health checks - code, process, and infra",
  "type": "module",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "bin": {
    "cm": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "vitest run tests/unit/",
    "test:unit": "vitest run tests/unit/",
    "test:watch": "vitest tests/unit/",
    "test:coverage": "vitest run tests/unit/ --coverage",
    "test:e2e": "vitest run tests/e2e/",
    "test:all": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "knip": "knip",
    "version": "changeset version",
    "prepare": "husky"
  },
  "keywords": [
    "linting",
    "code-quality",
    "process",
    "ci",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrismlittle123/check-my-toolkit.git"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^9.39.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.9",
    "aws-sdk-client-mock": "^4.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "knip": "^5.76.3",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.50.0",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@aws-sdk/client-resource-groups-tagging-api": "^3.967.0",
    "@aws-sdk/client-s3": "^3.967.0",
    "@iarna/toml": "^2.2.5",
    "chalk": "^5.6.2",
    "commander": "^13.0.0",
    "execa": "^9.6.1",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.1",
    "minimatch": "^10.1.1",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.25.1"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
